pipeline {
    agent any // Runs on the Jenkins host (your WSL machine)
    environment {
        // !!! REPLACE 'your-docker-username' with your actual Docker Hub username !!!
        DOCKER_IMAGE_REPO = 'bsse23051/cicd-demo'
        DIMAGE_TAG = "v${BUILD_NUMBER}"
    }

    stages {
        stage('1. Build Image') {
            steps {
                echo 'Building Docker image...'
                sh "docker build -t ${DOCKER_IMAGE_REPO}:${DIMAGE_TAG} ."
            }
        }
        
        stage('2. Push Image') {
            // Replace 'jenkins-docker-creds' with your actual credential ID if different
            withCredentials([usernamePassword(credentialsId: 'jenkins-docker-creds', passwordVariable: 'Asma2464262', usernameVariable: 'bsse23051')]) {
                steps {
                    sh "echo \$DOCKER_PASSWORD | docker login -u \$DOCKER_USER --password-stdin"
                    sh "docker push ${DOCKER_IMAGE_REPO}:${DIMAGE_TAG}"
                }
            }
        }

        stage('3. Test') {
            steps {
                echo 'ðŸ§ª Running container test...'
                sh "docker run --rm ${DOCKER_IMAGE_REPO}:${DIMAGE_TAG} echo 'Container is working fine'"
            }
        }

        stage('4. Deploy to Kubernetes') {
            steps {
                echo 'Deploying to Kubernetes...'
                // Apply the deployment.yaml file
                sh 'kubectl apply -f deployment.yaml'
                sh 'kubectl rollout status deployment/cicd-demo-deployment'
            }
        }
    }
}
